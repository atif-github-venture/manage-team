# ============================================
# Team Management Application - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================

# ============================================
# MONGODB CONFIGURATION
# ============================================
# Local MongoDB running in Podman
MONGO_URI=mongodb://mongoadmin:mongoadmin@localhost:27017/team-management?authSource=admin
MONGO_DB_NAME=team-management

# ============================================
# JIRA CLOUD CONFIGURATION
# ============================================
# Jira Cloud Base URL (without trailing slash)
JIRA_BASE_URL=https://your-org.atlassian.net

# Your Jira email address
JIRA_EMAIL=your-email@example.com

# Generate from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your-api-token-here

# Jira API Version (v2 or v3)
JIRA_API_VERSION=v2

# Optional: Jira webhook secret for real-time updates (future feature)
JIRA_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# OLLAMA CONFIGURATION (Local AI)
# ============================================
# Ollama API endpoint
OLLAMA_BASE_URL=http://localhost:11434

# Model to use (llama3.2, mistral, neural-chat, etc.)
OLLAMA_MODEL=llama3.2

# Context window size (tokens) - adjust based on your needs
# llama3.2 default: 2048, can go up to 8192
OLLAMA_CONTEXT_WINDOW=2048

# Temperature for generation (0.0 to 1.0)
# Lower = more deterministic, Higher = more creative
OLLAMA_TEMPERATURE=0.7

# Maximum tokens to generate for summaries
OLLAMA_MAX_TOKENS=500

# ============================================
# JWT & SECURITY
# ============================================
# Secret key for JWT signing (MUST be changed in production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-change-this-in-production

# JWT expiration time
JWT_EXPIRE=7d

# Number of salt rounds for bcrypt
BCRYPT_ROUNDS=10

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# SMTP host (Gmail example shown)
SMTP_HOST=smtp.gmail.com

# SMTP port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587

# Use TLS (true for port 587, false for port 465 with SSL)
SMTP_SECURE=false

# SMTP username/email
SMTP_USER=your-email@gmail.com

# SMTP password (App password for Gmail)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_PASS=your-app-password-16-chars

# Default email sender address
EMAIL_FROM=noreply@company.com

# Admin email for notifications
ADMIN_EMAIL=admin@company.com

# Enable/disable email notifications
EMAIL_ENABLED=true

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Backend server port
PORT=5000

# Frontend port (if running locally)
FRONTEND_PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Environment: development, staging, production
NODE_ENV=development

# ============================================
# LOGGING
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=debug

# Log to file (optional)
LOG_FILE=./logs/app.log

# ============================================
# DATE & TIME CONFIGURATION
# ============================================
# Timezone (UTC recommended for consistency)
TZ=UTC

# Working hours per day (for capacity calculations)
WORKING_HOURS_PER_DAY=8

# Weekend days (0=Sunday, 1=Monday, ..., 6=Saturday)
# Format: comma-separated numbers
WEEKEND_DAYS=0,6

# ============================================
# OPTIONAL: ADVANCED SETTINGS
# ============================================

# Database connection pool size
MONGO_POOL_SIZE=10

# Jira API rate limit (requests per minute)
JIRA_RATE_LIMIT=10

# Cache expiration time (in seconds)
CACHE_TTL=3600

# Audit logging enabled
AUDIT_LOGGING_ENABLED=true

# Email schedule for weekly reports (cron format)
# Default: 0 9 * * 1 (Monday at 9 AM)
EMAIL_SCHEDULE_CRON=0 9 * * 1

#